extends layout

block scripts
    script(src="https://cdn.jsdelivr.net/npm/marked/marked.min.js")

block content

    h1 #{bookReview.bookTitle}
    h3 #{bookReview.authorName}

    div(style='margin-left: 20px; margin-top:20px')

    h4 Review:
    if bookReview.isGoodReview
        h2 👍
    else
        h2 👎
    
    p
        form(method='POST' action= bookReview._id + '/delete')
            input(type='number' hidden=true name='_id')
            button.btn.btn-primary(type='submit') delete