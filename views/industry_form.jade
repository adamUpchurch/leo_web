extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        .form-group
            label(for='name') Industry:
            input#name.form-control(type='text' placeholder='Industry Name' name='name' value=(undefined=== industry ? '': industry.name))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!=error.msg