extends layout

block content
    h1 #{startup.title}

    div(style='margin-left: 20px; margin-top:20px')

    h4 Exective Summary - Elevator Pitch. 1-2 Sentences.
    h6 website url or github link
    p Industry: #{startup.industry.name}
    ul
        each user in startup.user
            li=user.name
        else
            p no users
    p Do you really want to delete this startup?

    form(method='POST' action='')
        .form-group
            input#startupid.form-control(type='hidden', name='startupid', required='true', value=startup._id)
        button.btn.btn-primary(type='submit') Delete
